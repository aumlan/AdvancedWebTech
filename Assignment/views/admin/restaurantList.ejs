<!DOCTYPE html>
<html>

<head>
    <title>Home</title>
    <link rel="stylesheet" type="text/css" href="/css/style.css" />
</head>

<body>
    <ul>
        <li><a href="/admin">Home</a></li>
        <li><a href="/logout">Log Out</a></li>
        <li>
            <div class="dropdown">
                <div class="dropbtn">Profile</div>
                <div class="dropdown-content">
                    <a href="/admin/profile">View Profile</a><br>
                    <a href="/admin/editProfile">Edit Profile</a>
                </div>
            </div>
        </li>
        <li><a class="active" href="/admin/restaurants">All Restaurants</a></li>
        <li><a href="/admin/addRestaurant">Add Restaurant</a></li>
    </ul>
    <div align="center">
        <span align="center">
            <h3>All Restaurants</h3>
        </span>
        <table border="1px" width="80%">
            <tr>
                <th width="10%">Logo</th>
                <th width="30%">Name</th>
                <th width="20%">Type</th>
                <th width="20%">Location</th>
                <th width="20%">Action</th>
            </tr>

            <% for(var i=0; i < restaurantList.length; i++){ %>
                <tr>
                    <td>
                        <img align="center" src="<%= restaurantList[i].R_IMAGE %>" alt="logo" height="100px" width="100px" />
                    </td>
                    <td>
                        <%= restaurantList[i].R_NAME %>
                    </td>
                    <td>
                        <%= restaurantList[i].R_TYPE %>
                    </td>
                    <td>
                        <%= restaurantList[i].R_LOCATION %>
                    </td>
                    <td>
                        <a href="/admin/restaurant/view/<%= restaurantList[i].R_ID %>">View Menu</a> |
                        <a href="/admin/restaurant/addMenu/<%= restaurantList[i].R_ID %>">Add Menu</a> |
                        <a href="/admin/restaurant/edit/<%= restaurantList[i].R_ID %>">Edit</a> |
                        <a href="/admin/restaurant/delete/<%= restaurantList[i].R_ID %>">Delete</a>
                    </td>
                </tr>
                <% } %>
        </table>
    </div>
</body>

</html>